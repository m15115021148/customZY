<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    tools:context=".ui.PayCouponActivity">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/typeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_20px_in720p"
        android:paddingStart="@dimen/_20px_in720p">

    </LinearLayout>

    <TextView
        android:id="@+id/offerMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:padding="@dimen/_20px_in720p"
        android:singleLine="true"
        android:text="@string/pay_offer_money"
        android:textColor="@color/red"
        android:textSize="@dimen/_30px_in720p" />

    <TextView
        android:id="@+id/realMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:padding="@dimen/_20px_in720p"
        android:singleLine="true"
        android:text="@string/pay_real_money"
        android:textColor="@color/red"
        android:textSize="@dimen/_30px_in720p" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />


</LinearLayout>