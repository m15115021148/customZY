<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p"
        android:background="@color/title_bg">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/back"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:background="@color/black_dan"
                android:layout_marginStart="@dimen/_20px_in720p"
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_20px_in720p" />

        </LinearLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/title"
            android:textSize="@dimen/_35px_in720p"
            android:textColor="@color/white"
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>