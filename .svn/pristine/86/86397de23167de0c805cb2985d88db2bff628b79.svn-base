<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/lan_dan"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pickDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20px_in720p"
            android:gravity="center"
            android:text="@string/pick_dialog_title"
            android:textColor="@color/white"
            android:textSize="@dimen/_32px_in720p" />

    </LinearLayout>

    <include layout="@layout/view_time_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/pop_txt_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_time_select_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/pick_dialog_cancel"
            android:textColor="@color/lan_dan"
            android:textSize="@dimen/_30px_in720p" />

        <View
            android:layout_width="@dimen/_2px_in720p"
            android:layout_height="match_parent"
            android:background="@color/pop_txt_bg" />

        <TextView
            android:id="@+id/btn_time_select_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/pick_dialog_sure"
            android:textColor="@color/lan_dan"
            android:textSize="@dimen/_30px_in720p" />


    </LinearLayout>

</LinearLayout>