<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20px_in720p">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_20px_in720p"
        android:paddingEnd="@dimen/_15px_in720p"
        android:paddingStart="@dimen/_15px_in720p"
        android:paddingTop="@dimen/_5px_in720p">

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_goods_type" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_goods_name" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_price" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_goods_number" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_total_price" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_20px_in720p"
        android:paddingEnd="@dimen/_15px_in720p"
        android:paddingStart="@dimen/_15px_in720p"
        android:paddingTop="@dimen/_5px_in720p">

        <TextView
            android:id="@+id/orderGoodsType"
            style="@style/OrderTitleStyle"
            android:maxLines="2"
            android:singleLine="false" />

        <TextView
            android:id="@+id/orderGoodsName"
            style="@style/OrderTitleStyle"
            android:maxLines="2"
            android:singleLine="false" />

        <TextView
            android:id="@+id/orderPrice"
            style="@style/OrderTitleStyle" />

        <TextView
            android:id="@+id/orderGoodsNumber"
            style="@style/OrderTitleStyle" />

        <TextView
            android:id="@+id/orderGoodsTotalMoney"
            style="@style/OrderTitleStyle"
            android:textColor="@color/red" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginEnd="@dimen/_20px_in720p"
        android:layout_marginStart="@dimen/_20px_in720p"
        android:background="@color/pop_txt_bg" />

</LinearLayout>