<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/x20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x20"
        android:paddingEnd="@dimen/x15"
        android:paddingStart="@dimen/x15"
        android:paddingTop="@dimen/x5">

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_goods_type" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_goods_name" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_price" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_goods_number" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_total_price" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x20"
        android:paddingEnd="@dimen/x15"
        android:paddingStart="@dimen/x15"
        android:paddingTop="@dimen/x5">

        <TextView
            android:id="@+id/orderGoodsType"
            style="@style/OrderTitleStyle"
            android:maxLines="2"
            android:singleLine="false" />

        <TextView
            android:id="@+id/orderGoodsName"
            style="@style/OrderTitleStyle"
            android:maxLines="2"
            android:singleLine="false" />

        <TextView
            android:id="@+id/orderPrice"
            style="@style/OrderTitleStyle" />

        <EditText
            android:id="@+id/orderGoodsNumber"
            style="@style/OrderTitleStyle"
            android:background="@drawable/input_money_bg"
            android:inputType="number" />

        <TextView
            android:id="@+id/orderGoodsTotalMoney"
            style="@style/OrderTitleStyle"
            android:textColor="@color/red" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginStart="@dimen/x20"
        android:background="@color/pop_txt_bg" />

</LinearLayout>