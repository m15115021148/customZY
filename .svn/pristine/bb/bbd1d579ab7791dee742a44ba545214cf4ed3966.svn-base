<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/x20"
        android:paddingStart="@dimen/x20">

        <include
            layout="@layout/comment_good_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/pop_txt_bg" />

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oilCardMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="@string/returns_oil_card_money"
                android:textColor="@color/black_dan"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/otherMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="@string/returns_other_money"
                android:textColor="@color/black_dan"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/operating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text="@string/returns_operating"
                android:textColor="@color/red"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/printTicket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_money_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/paid_print_ticket"
                android:textColor="@color/black_dan"
                android:textSize="@dimen/x20" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

    </LinearLayout>

</LinearLayout>