<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    tools:context=".ui.PaymentOilCardMoneyActivity">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x150"
        android:text="@string/pay_oil_card_method"
        android:textColor="@color/black"
        android:textSize="@dimen/x35"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x20"
        android:paddingEnd="@dimen/x40"
        android:paddingStart="@dimen/x40"
        android:paddingTop="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_oil_card_input_money"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/x30" />

        <EditText
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/inputMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_money_bg"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingStart="@dimen/x10"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/x30" />

    </LinearLayout>

    <TextView
        android:id="@+id/nextWay"
        android:layout_width="@dimen/x250"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/pay_oil_cart_next_way_bg"
        android:gravity="center"
        android:onClick="onNextWay"
        android:padding="@dimen/x20"
        android:text="@string/pay_oil_card_next_way"
        android:textColor="@color/black_dan"
        android:textSize="@dimen/x30" />

</LinearLayout>