<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_20px_in720p"
        android:paddingStart="@dimen/_20px_in720p">

        <include
            layout="@layout/comment_good_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:background="@color/pop_txt_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90px_in720p"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/oilCardMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:text="@string/returns_oil_card_money"
                android:textColor="@color/black_dan"
                android:textSize="@dimen/_30px_in720p" />

            <TextView
                android:id="@+id/otherMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px_in720p"
                android:layout_toEndOf="@+id/oilCardMoney"
                android:singleLine="true"
                android:text="@string/returns_other_money"
                android:textColor="@color/black_dan"
                android:textSize="@dimen/_30px_in720p" />

            <TextView
                android:id="@+id/operating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:text="@string/returns_operating"
                android:textColor="@color/red"
                android:textSize="@dimen/_30px_in720p" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"
            android:background="@color/grey" />

    </LinearLayout>

</LinearLayout>