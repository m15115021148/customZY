<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bg</item>
        <item name="colorPrimaryDark">@color/title_bg</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:launchMode">singleTop</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="HomePagerTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_120px_in720p</item>
        <item name="android:textSize">@dimen/_35px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/_20px_in720p</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OrderTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/black_dan</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
