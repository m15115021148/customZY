<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:text="@string/goods_scan"
        android:id="@+id/scan"
        android:layout_width="@dimen/_200px_in720p"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_100px_in720p"
        android:background="@drawable/input_money_bg"
        android:padding="@dimen/_20px_in720p"
        android:textColor="@color/black_dan"
        android:textSize="@dimen/_30px_in720p" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>