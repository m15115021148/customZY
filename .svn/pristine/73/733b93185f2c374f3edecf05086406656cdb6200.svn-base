<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.bluemobi.zhongyou.view.scan.QRCoverView
            android:id="@+id/scanView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cornerColor="#0a9610"
            app:cornerLength="@dimen/x60"
            app:cornerOutside="false"
            app:cornerWidth="@dimen/x5"
            app:laserColor="#2ec935"
            app:laserVisible="true"
            app:scanRectHeight="@dimen/x550"
            app:scanRectWidth="@dimen/x550"/>

    </RelativeLayout>

</LinearLayout>