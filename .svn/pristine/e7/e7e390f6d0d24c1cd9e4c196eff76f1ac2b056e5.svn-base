<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x15"
        android:paddingTop="@dimen/x15">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/pay_coupon_number"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="@dimen/x30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x20"
        android:paddingEnd="@dimen/x15"
        android:paddingStart="@dimen/x15"
        android:paddingTop="@dimen/x5">

        <TextView
            android:id="@+id/type"
            style="@style/OrderTitleStyle"
            android:text="@string/order_oil_gun" />

        <TextView
            android:id="@+id/name"
            style="@style/OrderTitleStyle"
            android:text="@string/order_oil_number" />

        <TextView
            android:id="@+id/price"
            style="@style/OrderTitleStyle"
            android:text="@string/order_number_of_liters" />

        <TextView
            android:id="@+id/number"
            style="@style/OrderTitleStyle"
            android:text="@string/order_price" />

        <TextView
            style="@style/OrderTitleStyle"
            android:text="@string/order_total_price" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingEnd="@dimen/x15"
        android:paddingStart="@dimen/x15"
        android:paddingTop="@dimen/x10">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/orderTotalPrice"
            style="@style/OrderTitleStyle"
            android:textColor="@color/red" />

    </LinearLayout>

</LinearLayout>